<div class="navbar">
  <a class="back home" href="/">Cities<img src="/images/bkr.png" /></a>
  <a class="forward button home" href="/"><img src="/images/bk2l.png" /><img class="buttonimage" src="/images/logosmall.png" /></a>
  <h1><%= params[:city] %></h1>
</div>
<div class="intro info">
  <p>Choose a disease to track in realtime.</p>
</div>

<ul class="list">
  <% @phrases.each do |phrase|%>
  <li><a href="/<%= params[:country] %>/<%= params[:city] %>/<%= phrase.title %>"><span class="city"><%= phrase.title %></span> <span id="phrase_graph_<%= phrase.id %>" class="tiny_graph"><% @trend[phrase.id].each do |hour| %><%= hour %>,<% end %></span></a></li>
  <% end %>
</ul>
<script type="text/javascript">
  $('.tiny_graph').sparkline();
</script>